@model HealthOps_Project.Models.VitalSign
@{
    ViewData["Title"] = "Vital Signs Details";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-heartbeat text-danger me-2"></i>Vital Signs Details</h2>
        <div>
            <a href="@Url.Action("Edit", new { id = Model.VitalId })" class="btn btn-warning">
                <i class="fas fa-edit me-1"></i>Edit
            </a>
            <a href="@Url.Action("Index", new { patientId = Model.PatientId })" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-1"></i>Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <!-- Patient Information Card -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Patient Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar mx-auto">
                            <div class="avatar-initial rounded-circle bg-primary text-white">
                                @Model.Patient.FirstName.Substring(0, 1)@Model.Patient.LastName.Substring(0, 1)
                            </div>
                        </div>
                    </div>
                    <h5 class="text-center mb-3">@Model.Patient.FirstName @Model.Patient.LastName</h5>
                    <hr>
                    <p><strong>Patient ID:</strong> @Model.Patient.PatientId</p>
                    <p><strong>Room:</strong> @(Model.Patient.RoomNumber ?? "Not assigned")</p>
                    <p><strong>Admission Date:</strong> @Model.Patient.AdmissionDate?.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>

        <!-- Vital Signs Data Card -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-line me-2"></i>Vital Signs Measurements</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="vital-item p-3 mb-3 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-thermometer-half fa-2x text-danger me-3"></i>
                                    <div>
                                        <small class="text-muted">Temperature</small>
                                        <h4 class="mb-0">
                                            @(Model.Temperature.HasValue ? $"{Model.Temperature:F1} °C" : "Not recorded")
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="vital-item p-3 mb-3 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-heartbeat fa-2x text-danger me-3"></i>
                                    <div>
                                        <small class="text-muted">Blood Pressure</small>
                                        <h4 class="mb-0">
                                            @(Model.BloodPressure ?? "Not recorded")
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="vital-item p-3 mb-3 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-heart fa-2x text-danger me-3"></i>
                                    <div>
                                        <small class="text-muted">Heart Rate</small>
                                        <h4 class="mb-0">
                                            @(Model.HeartRate.HasValue ? $"{Model.HeartRate} bpm" : "Not recorded")
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="vital-item p-3 mb-3 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-lungs fa-2x text-info me-3"></i>
                                    <div>
                                        <small class="text-muted">Oxygen Saturation</small>
                                        <h4 class="mb-0">
                                            @(Model.OxygenSaturation.HasValue ? $"{Model.OxygenSaturation}%" : "Not recorded")
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="vital-item p-3 mb-3 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-weight fa-2x text-success me-3"></i>
                                    <div>
                                        <small class="text-muted">Weight</small>
                                        <h4 class="mb-0">
                                            @(Model.Weight.HasValue ? $"{Model.Weight:F1} kg" : "Not recorded")
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="vital-item p-3 mb-3 bg-light rounded">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-tint fa-2x text-primary me-3"></i>
                                    <div>
                                        <small class="text-muted">Blood Sugar</small>
                                        <h4 class="mb-0">
                                            @(Model.BloodSugar.HasValue ? $"{Model.BloodSugar} mg/dL" : "Not recorded")
                                        </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <!-- Recording Information -->
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong><i class="fas fa-calendar me-2"></i>Recorded Date:</strong></p>
                            <p class="text-muted">@Model.RecordedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong><i class="fas fa-user-nurse me-2"></i>Recorded By:</strong></p>
                            <p class="text-muted">@Model.RecordedBy</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <hr>
                        <div>
                            <p><strong><i class="fas fa-notes-medical me-2"></i>Notes:</strong></p>
                            <p class="text-muted">@Model.Notes</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a href="@Url.Action("Edit", new { id = Model.VitalId })" class="btn btn-warning btn-lg">
            <i class="fas fa-edit me-1"></i>Edit Vitals
        </a>
        <a href="@Url.Action("Delete", new { id = Model.VitalId })" class="btn btn-danger btn-lg">
            <i class="fas fa-trash me-1"></i>Delete
        </a>
    </div>
</div>

<style>
    .avatar {
        width: 80px;
        height: 80px;
    }

    .avatar-initial {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 24px;
    }

    .vital-item {
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

        .vital-item:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>