@model HealthOps_Project.Models.VitalSign
@{
    ViewData["Title"] = "Delete Vital Signs";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-trash-alt text-danger me-2"></i>Delete Vital Signs</h2>
        <a href="@Url.Action("Index", new { patientId = Model.PatientId })" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i>Back to List
        </a>
    </div>

    <!-- Warning Alert -->
    <div class="alert alert-danger d-flex align-items-center" role="alert">
        <i class="fas fa-exclamation-triangle fa-2x me-3"></i>
        <div>
            <h5 class="alert-heading mb-1">Warning!</h5>
            <p class="mb-0">Are you sure you want to delete this vital signs record? This action cannot be undone.</p>
        </div>
    </div>

    <div class="row">
        <!-- Patient Information -->
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-user me-2"></i>Patient Information</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-3">
                        <div class="avatar mx-auto">
                            <div class="avatar-initial rounded-circle bg-primary text-white">
                                @Model.Patient.FirstName.Substring(0, 1)@Model.Patient.LastName.Substring(0, 1)
                            </div>
                        </div>
                    </div>
                    <h5 class="text-center mb-3">@Model.Patient.FirstName @Model.Patient.LastName</h5>
                    <hr>
                    <p><strong>Patient ID:</strong> @Model.Patient.PatientId</p>
                    <p><strong>Room:</strong> @(Model.Patient.RoomNumber ?? "Not assigned")</p>
                    <p><strong>Admission Date:</strong> @Model.Patient.AdmissionDate?.ToString("MMM dd, yyyy")</p>
                </div>
            </div>
        </div>

        <!-- Vital Signs to be Deleted -->
        <div class="col-lg-8 mb-4">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-file-medical me-2"></i>Record to be Deleted</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="info-box p-3 bg-light rounded">
                                <small class="text-muted">Temperature</small>
                                <h5 class="mb-0">
                                    <i class="fas fa-thermometer-half text-danger me-2"></i>
                                    @(Model.Temperature.HasValue ? $"{Model.Temperature:F1} °C" : "Not recorded")
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-box p-3 bg-light rounded">
                                <small class="text-muted">Blood Pressure</small>
                                <h5 class="mb-0">
                                    <i class="fas fa-heartbeat text-danger me-2"></i>
                                    @(Model.BloodPressure ?? "Not recorded")
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-box p-3 bg-light rounded">
                                <small class="text-muted">Heart Rate</small>
                                <h5 class="mb-0">
                                    <i class="fas fa-heart text-danger me-2"></i>
                                    @(Model.HeartRate.HasValue ? $"{Model.HeartRate} bpm" : "Not recorded")
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-box p-3 bg-light rounded">
                                <small class="text-muted">Oxygen Saturation</small>
                                <h5 class="mb-0">
                                    <i class="fas fa-lungs text-info me-2"></i>
                                    @(Model.OxygenSaturation.HasValue ? $"{Model.OxygenSaturation}%" : "Not recorded")
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-box p-3 bg-light rounded">
                                <small class="text-muted">Weight</small>
                                <h5 class="mb-0">
                                    <i class="fas fa-weight text-success me-2"></i>
                                    @(Model.Weight.HasValue ? $"{Model.Weight:F1} kg" : "Not recorded")
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="info-box p-3 bg-light rounded">
                                <small class="text-muted">Blood Sugar</small>
                                <h5 class="mb-0">
                                    <i class="fas fa-tint text-primary me-2"></i>
                                    @(Model.BloodSugar.HasValue ? $"{Model.BloodSugar} mg/dL" : "Not recorded")
                                </h5>
                            </div>
                        </div>
                    </div>

                    <hr>

                    <!-- Recording Details -->
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong><i class="fas fa-calendar me-2"></i>Recorded Date:</strong></p>
                            <p class="text-muted">@Model.RecordedDate.ToString("MMMM dd, yyyy 'at' hh:mm tt")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong><i class="fas fa-user-nurse me-2"></i>Recorded By:</strong></p>
                            <p class="text-muted">@Model.RecordedBy</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.Notes))
                    {
                        <hr>
                        <div>
                            <p><strong><i class="fas fa-notes-medical me-2"></i>Notes:</strong></p>
                            <div class="alert alert-secondary">
                                @Model.Notes
                            </div>
                        </div>
                    }
                </div>
            </div>

            <!-- Confirmation Form -->
            <div class="card shadow-sm mt-4">
                <div class="card-body">
                    <form asp-controller="VitalSigns" asp-action="Delete" method="post">
                        <input type="hidden" asp-for="VitalId" />

                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="text-danger mb-2">
                                    <i class="fas fa-exclamation-circle me-2"></i>Confirm Deletion
                                </h5>
                                <p class="text-muted mb-0">
                                    This will permanently delete this vital signs record from the system.
                                </p>
                            </div>
                            <div class="d-flex gap-2">
                                <a href="@Url.Action("Index", new { patientId = Model.PatientId })"
                                   class="btn btn-secondary btn-lg">
                                    <i class="fas fa-times me-1"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-danger btn-lg">
                                    <i class="fas fa-trash me-1"></i>Yes, Delete
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Options -->
    <div class="text-center mt-4">
        <a href="@Url.Action("Details", new { id = Model.VitalId })" class="btn btn-info">
            <i class="fas fa-eye me-1"></i>View Full Details
        </a>
        <a href="@Url.Action("Edit", new { id = Model.VitalId })" class="btn btn-warning">
            <i class="fas fa-edit me-1"></i>Edit Instead
        </a>
    </div>
</div>

<style>
    .avatar {
        width: 80px;
        height: 80px;
    }

    .avatar-initial {
        width: 80px;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: bold;
        font-size: 24px;
    }

    .info-box {
        transition: transform 0.2s ease;
    }

        .info-box:hover {
            transform: translateY(-2px);
            box-shadow: 0 2px 6px rgba(0,0,0,0.1);
        }

    .gap-2 {
        gap: 0.5rem;
    }
</style>