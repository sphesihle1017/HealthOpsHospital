@model HealthOps_Project.Models.Medication

@{
    ViewData["Title"] = "Medication Details";
}

<h2>Medication Details</h2>

<div class="mb-3"><strong>Name:</strong> @Model.Name</div>
<div class="mb-3"><strong>Type:</strong> @Model.Type</div>
<div class="mb-3"><strong>Quantity:</strong> @Model.Quantity</div>
<div class="mb-3"><strong>Expiry Date:</strong> @Model.ExpiryDate.ToShortDateString()</div>
<div class="mb-3"><strong>Schedule:</strong> @Model.Schedule</div>
<div class="mb-3"><strong>Description:</strong> @(string.IsNullOrEmpty(Model.Description) ? "None" : Model.Description)</div>
<div class="mb-3"><strong>Status:</strong> @Model.DeletionStatus</div>

<a asp-action="EditMedication" asp-route-id="@Model.MedicationId" class="btn btn-warning">Edit</a>
<a asp-action="Medications" class="btn btn-secondary">Back to List</a>
