<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HealthOps Hospital</title>
    <style>
        /* Reset and base styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            line-height: 1.6;
            color: #333;
            background-color: #ffffff;
            font-size: 12px;
        }

        /* Header Styles */
        .pdf-header {
            border-bottom: 3px solid #1a237e;
            padding: 20px 0;
            margin-bottom: 25px;
            background: linear-gradient(135deg, #1a237e 0%, #283593 100%);
            color: white;
        }

        .hospital-info {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 30px;
        }

        .hospital-logo {
            width: 80px;
            height: 80px;
            border-radius: 10px;
            border: 3px solid white;
        }

        .hospital-details {
            text-align: center;
            flex-grow: 1;
            margin: 0 30px;
        }

        .hospital-name {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 5px;
            letter-spacing: 1px;
        }

        .hospital-tagline {
            font-size: 14px;
            opacity: 0.9;
            font-style: italic;
        }

        .document-meta {
            text-align: right;
            font-size: 11px;
        }

        .document-id {
            font-weight: bold;
            margin-bottom: 5px;
        }

        /* Content Styles */
        .pdf-content {
            padding: 0 30px;
            margin-bottom: 30px;
        }

        .document-title {
            text-align: center;
            margin: 25px 0;
            color: #1a237e;
        }

            .document-title h1 {
                font-size: 20px;
                font-weight: bold;
                border-bottom: 2px solid #1a237e;
                padding-bottom: 10px;
                display: inline-block;
            }

        /* Table Styles */
        .data-table {
            width: 100%;
            border-collapse: collapse;
            margin: 20px 0;
            font-size: 11px;
        }

            .data-table th {
                background: #1a237e;
                color: white;
                padding: 10px;
                text-align: left;
                font-weight: bold;
                border: 1px solid #1a237e;
            }

            .data-table td {
                padding: 8px 10px;
                border: 1px solid #ddd;
            }

            .data-table tr:nth-child(even) {
                background-color: #f8f9fa;
            }

            .data-table tr:hover {
                background-color: #e3f2fd;
            }

        /* Footer Styles */
        .pdf-footer {
            border-top: 2px solid #1a237e;
            padding: 20px 30px;
            margin-top: 40px;
            background: #f8f9fa;
            font-size: 10px;
        }

        .footer-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .hospital-address {
            text-align: left;
        }

        .document-stamp {
            text-align: center;
        }

        .document-contacts {
            text-align: right;
        }

        .stamp-area {
            border: 2px dashed #1a237e;
            padding: 15px;
            min-width: 150px;
            text-align: center;
            font-style: italic;
            color: #666;
        }

        /* Utility Classes */
        .text-center {
            text-align: center;
        }

        .text-right {
            text-align: right;
        }

        .text-bold {
            font-weight: bold;
        }

        .mb-3 {
            margin-bottom: 15px;
        }

        .mt-3 {
            margin-top: 15px;
        }

        .p-3 {
            padding: 15px;
        }

        .border {
            border: 1px solid #ddd;
        }

        .bg-light {
            background-color: #f8f9fa;
        }

        /* Signature area */
        .signature-area {
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid #ddd;
        }

        .signature-line {
            width: 300px;
            border-bottom: 1px solid #333;
            margin: 40px 0 5px 0;
        }

        .signature-label {
            font-size: 10px;
            color: #666;
        }

        /* Watermark style for confidential documents */
        .confidential-watermark {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%) rotate(-45deg);
            font-size: 80px;
            color: rgba(26, 35, 126, 0.1);
            font-weight: bold;
            pointer-events: none;
            z-index: -1;
        }

        /* Page break for multi-page documents */
        .page-break {
            page-break-before: always;
        }

        /* No print styles for screen media */
        @@media screen {
            body {
                background-color: #f5f5f5;
                padding: 20px;
            }

            .pdf-content {
                background: white;
                box-shadow: 0 0 20px rgba(0,0,0,0.1);
                border-radius: 8px;
                margin: 20px auto;
                max-width: 210mm;
            }
        }

        /* Print styles */
        @@media print {
            body {
                margin: 0;
                padding: 0;
            }

            .pdf-content {
                padding: 0;
                margin: 0;
            }

            .no-print {
                display: none;
            }
        }
    </style>
</head>
<body>
    <!-- Confidential Watermark -->
    <div class="confidential-watermark">
        HEALTHOPS HOSPITAL
    </div>

    <!-- Header -->
    <div class="pdf-header">
        <div class="hospital-info">
            <div>
                <img src="@Url.Content("~/images/icon.jpeg")" class="hospital-logo" alt="HealthOps Hospital Logo" />
            </div>
            <div class="hospital-details">
                <div class="hospital-name">HEALTHOPS HOSPITAL</div>
                <div class="hospital-tagline">Excellence in Healthcare • Accredited Medical Facility</div>
            </div>
            <div class="document-meta">
                <div class="document-id">Document ID: @Guid.NewGuid().ToString().Substring(0, 8).ToUpper()</div>
                <div>Generated: @DateTime.Now.ToString("yyyy-MM-dd HH:mm")</div>
                <div>Page: <span class="page-number"></span></div>
            </div>
        </div>
    </div>

    <!-- Content -->
    <div class="pdf-content">
        <div class="document-title">
            <h1>@ViewData["Title"]</h1>
        </div>

        @RenderBody()
    </div>

    <!-- Footer -->
    <div class="pdf-footer">
        <div class="footer-content">
            <div class="hospital-address">
                <div class="text-bold">HealthOps Hospital</div>
                <div>123 Medical Drive, Healthcare District</div>
                <div>Johannesburg, 2000, South Africa</div>
                <div>Tel: +27 11 123 4567 | Emergency: +27 11 123 4568</div>
            </div>

            <div class="document-stamp">
                <div class="stamp-area">
                    AUTHORIZED DOCUMENT<br />
                    HEALTHOPS HOSPITAL<br />
                    @DateTime.Now.ToString("yyyy-MM-dd")
                </div>
            </div>

            <div class="document-contacts">
                <div class="text-bold">Contact Information</div>
                <div>Email: info@healthops-hospital.co.za</div>
                <div>Website: www.healthops-hospital.co.za</div>
                <div>License: MPDB 12345/2024</div>
            </div>
        </div>

        <div class="signature-area">
            <div style="display: flex; justify-content: space-between;">
                <div>
                    <div class="signature-line"></div>
                    <div class="signature-label">Authorized Signature</div>
                </div>
                <div>
                    <div class="signature-line"></div>
                    <div class="signature-label">Date</div>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Simple page numbering
        document.addEventListener('DOMContentLoaded', function() {
            const pageNumbers = document.querySelectorAll('.page-number');
            pageNumbers.forEach((el, index) => {
                el.textContent = (index + 1).toString();
            });
        });
    </script>
</body>
</html>