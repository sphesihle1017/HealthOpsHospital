@model HealthOps_Project.Models.Stocktake

@{
    ViewData["Title"] = "Delete Stocktake";
}

<h1><i class="fas fa-trash"></i> Delete Stocktake</h1>

<h3>Are you sure you want to delete this stocktake record?</h3>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Consumable:</dt>
            <dd class="col-sm-9">@Model.Consumable.Name</dd>

            <dt class="col-sm-3">Ward Name:</dt>
            <dd class="col-sm-9">@Model.WardName</dd>

            <dt class="col-sm-3">Quantity Counted:</dt>
            <dd class="col-sm-9">@Model.QuantityCounted</dd>

            <dt class="col-sm-3">Date Taken:</dt>
            <dd class="col-sm-9">@Model.DateTaken.ToString("yyyy-MM-dd HH:mm")</dd>

            <dt class="col-sm-3">Notes:</dt>
            <dd class="col-sm-9">@Model.Notes</dd>
        </dl>
    </div>
    <div class="card-footer">
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
        </form>
    </div>
</div>