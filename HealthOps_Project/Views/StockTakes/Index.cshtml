@model IEnumerable<HealthOps_Project.Models.Stocktake>

@{
    ViewData["Title"] = "Stocktakes";
}
<partial name="_BackButton" />

<h1><i class="fas fa-clipboard-check"></i> Stocktakes</h1>

<p>
    <a asp-action="Create" class="btn btn-success"><i class="fas fa-plus"></i> New Stocktake</a>
    <a asp-action="GenerateReport" class="btn btn-primary"><i class="fas fa-chart-bar"></i> Generate Report</a>
</p>

<table class="table table-striped table-hover">
    <thead class="table-dark">
        <tr>
            <th>Consumable</th>
            <th>Ward</th>
            <th>Quantity Counted</th>
            <th>Date Taken</th>
            <th>Notes</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Consumable.Name)</td>
                <td>@Html.DisplayFor(modelItem => item.WardName)</td>
                <td>@Html.DisplayFor(modelItem => item.QuantityCounted)</td>
                <td>@Html.DisplayFor(modelItem => item.DateTaken)</td>
                <td>@Html.DisplayFor(modelItem => item.Notes)</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fas fa-info-circle"></i> Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fas fa-edit"></i> Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm"><i class="fas fa-trash"></i> Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>