@model HealthOps_Project.Models.Stocktake

@{
    ViewData["Title"] = "Edit Stocktake";
}

<h1><i class="fas fa-edit"></i> Edit Stocktake</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="ConsumableId" class="control-label">Consumable</label>
                <select asp-for="ConsumableId" class="form-control" asp-items="ViewBag.ConsumableId">
                    <option value="">-- Select Consumable --</option>
                </select>
                <span asp-validation-for="ConsumableId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WardName" class="control-label">Ward Name</label>
                <input asp-for="WardName" class="form-control" />
                <span asp-validation-for="WardName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="QuantityCounted" class="control-label">Quantity Counted</label>
                <input asp-for="QuantityCounted" class="form-control" />
                <span asp-validation-for="QuantityCounted" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Notes" class="control-label">Notes</label>
                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-warning"><i class="fas fa-save"></i> Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>