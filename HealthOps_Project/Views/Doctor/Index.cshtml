@model IEnumerable<HealthOps_Project.Models.Doctor>

@{
    ViewData["Title"] = "Doctors";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center text-white" style="background-color:#d4a017;">
            <h2 class="mb-0">Doctor Management</h2>
        </div>
        <div class="card-body" style="background-color:#fff8e1;">
            <div class="mb-3 text-end">
                <a asp-action="Create" class="btn btn-success px-4">➕ Add New Doctor</a>

                <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                    ⬅ Back to Dashboard
                </a>
            </div>
          

            <table class="table table-hover table-striped align-middle text-center">
                <thead class="table-dark">
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Specialty</th>
                        <th>Phone</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                        <tr>
                            <td>@doctor.FirstName</td>
                            <td>@doctor.LastName</td>
                            <td>@doctor.Specialty</td>
                            <td>@doctor.PhoneNumber</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@doctor.DoctorId" class="btn btn-info btn-sm me-1 text-white">Details</a>
                                <a asp-action="Edit" asp-route-id="@doctor.DoctorId" class="btn btn-warning btn-sm me-1">Edit</a>
                                <a asp-action="Delete" asp-route-id="@doctor.DoctorId" class="btn btn-danger btn-sm">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
