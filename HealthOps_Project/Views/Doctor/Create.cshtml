@model HealthOps_Project.Models.Doctor

@{
    ViewData["Title"] = "Create Doctor";
}

<div class="container mt-5">
    <div class="card shadow-lg border-0">
        <div class="card-header text-center text-white" style="background-color:#d4a017;">
            <h3>Add New Doctor</h3>
        </div>
        <div class="card-body" style="background-color:#fff8e1;">
            <form asp-action="Create" method="post" class="p-3" style="max-width:600px; margin:auto;">
                <div class="form-group mb-3">
                    <label asp-for="FirstName" class="form-label fw-bold">First Name</label>
                    <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="LastName" class="form-label fw-bold">Last Name</label>
                    <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="Specialty" class="form-label fw-bold">Specialty</label>
                    <input asp-for="Specialty" class="form-control" placeholder="Enter specialty" />
                    <span asp-validation-for="Specialty" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" placeholder="Enter phone number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">💾 Save</button>
                    <a asp-action="Index" class="btn btn-secondary px-4 ms-2">⬅ Back</a>
                </div>
            </form>
        </div>
    </div>
</div>
