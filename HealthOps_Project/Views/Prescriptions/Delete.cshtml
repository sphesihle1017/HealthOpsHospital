@model HealthOps_Project.Models.Prescription

@{
    ViewData["Title"] = "Delete Prescription";
}

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Prescriptions</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-danger text-white d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-trash-alt me-2"></i>@ViewData["Title"]
            </div>
            <div>
                <span class="badge bg-light text-dark">ID: @Model.PrescriptionId</span>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                <strong>Warning:</strong> This action cannot be undone. All prescription data will be permanently deleted.
            </div>

            <h5>Are you sure you want to delete this prescription?</h5>
            <dl class="row mt-3">
                <dt class="col-sm-3">Patient</dt>
                <dd class="col-sm-9">@Model.Patient?.LastName @Model.Patient?.SouthAfricanID</dd>
                <dt class="col-sm-3">Medication</dt>
                <dd class="col-sm-9">@Model.MedicationName</dd>
                <dt class="col-sm-3">Dosage</dt>
                <dd class="col-sm-9">@Model.Dosage</dd>
                <dt class="col-sm-3">Frequency</dt>
                <dd class="col-sm-9">@Model.Frequency</dd>
                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">
                    <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
                </dd>
                <dt class="col-sm-3">Prescribing Doctor</dt>
                <dd class="col-sm-9">@Model.PrescribingDoctor</dd>
            </dl>

            <form asp-action="DeleteConfirmed">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="PrescriptionId" />
                <div class="d-flex justify-content-between mt-4">
                    <div>
                        <a asp-action="Index" class="btn btn-secondary me-2"><i class="fas fa-arrow-left me-1"></i>Cancel</a>
                        <a asp-action="Details" asp-route-id="@Model.PrescriptionId" class="btn btn-info me-2"><i class="fas fa-eye me-1"></i>View Details</a>
                    </div>
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash-alt me-1"></i>Delete Prescription</button>
                </div>
            </form>
        </div>
    </div>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status?.ToLower() switch
        {
            "new" => "bg-success",
            "pending" => "bg-warning",
            "processed" => "bg-info",
            "dispensed" => "bg-primary",
            "completed" => "bg-success",
            _ => "bg-secondary"
        };
    }
}