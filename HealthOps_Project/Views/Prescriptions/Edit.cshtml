@model HealthOps_Project.Models.Prescription

@{
    ViewData["Title"] = "Edit Prescription";
}

<div class="container py-5">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index">Prescriptions</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
            <div>
                <i class="fas fa-edit me-2"></i>@ViewData["Title"]
            </div>
            <div>
                <a asp-action="GeneratePdf" asp-route-id="@Model.PrescriptionId" class="btn btn-sm btn-light" title="Generate PDF">
                    <i class="fas fa-file-pdf me-1"></i>PDF
                </a>
            </div>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="PrescriptionId" />

                <div class="mb-3">
                    <label asp-for="MedicationName" class="form-label required">Medication Name</label>
                    <input asp-for="MedicationName" class="form-control" />
                    <span asp-validation-for="MedicationName" class="text-danger"></span>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="Dosage" class="form-label required">Dosage</label>
                        <input asp-for="Dosage" class="form-control" />
                        <span asp-validation-for="Dosage" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Frequency" class="form-label required">Frequency</label>
                        <select asp-for="Frequency" class="form-control">
                            <option value="">-- Select Frequency --</option>
                            <option value="Once daily">Once daily</option>
                            <option value="Twice daily">Twice daily</option>
                            <option value="Three times daily">Three times daily</option>
                            <option value="Every 8 hours">Every 8 hours</option>
                            <option value="As needed">As needed</option>
                        </select>
                        <span asp-validation-for="Frequency" class="text-danger"></span>
                    </div>
                </div>

                <div class="mb-3">
                    <label asp-for="Instructions" class="form-label">Instructions</label>
                    <textarea asp-for="Instructions" class="form-control" rows="3"></textarea>
                </div>

                <div class="mb-3">
                    <label asp-for="Notes" class="form-label">Notes</label>
                    <textarea asp-for="Notes" class="form-control" rows="2"></textarea>
                </div>

                <div class="d-flex justify-content-between mt-3">
                    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i>Back to List</a>
                    <div>
                        <a asp-action="Details" asp-route-id="@Model.PrescriptionId" class="btn btn-info me-2"><i class="fas fa-eye me-1"></i>View</a>
                        <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Save Changes</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>