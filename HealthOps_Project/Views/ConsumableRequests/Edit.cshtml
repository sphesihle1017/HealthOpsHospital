@model HealthOps_Project.Models.ConsumableRequest

@{
    ViewData["Title"] = "Edit Consumable Request";
}

<h1><i class="fas fa-edit"></i> Edit Consumable Request</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group mb-3">
                <label asp-for="ConsumableId" class="control-label">Consumable</label>
                <select asp-for="ConsumableId" class="form-control" asp-items="ViewBag.ConsumableId">
                    <option value="">-- Select Consumable --</option>
                </select>
                <span asp-validation-for="ConsumableId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WardName" class="control-label">Ward Name</label>
                <input asp-for="WardName" class="form-control" />
                <span asp-validation-for="WardName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="QuantityRequested" class="control-label">Quantity Requested</label>
                <input asp-for="QuantityRequested" class="form-control" />
                <span asp-validation-for="QuantityRequested" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Status" class="control-label">Status</label>
                <select asp-for="Status" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="Approved">Approved</option>
                    <option value="Received">Received</option>
                    <option value="Rejected">Rejected</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RequestedAt" class="control-label">Requested At</label>
                <input asp-for="RequestedAt" class="form-control" readonly />
            </div>

            <div class="form-group mb-3">
                <label asp-for="ReceivedAt" class="control-label">Received At</label>
                <input asp-for="ReceivedAt" class="form-control" type="datetime-local" />
                <span asp-validation-for="ReceivedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Save Changes</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}