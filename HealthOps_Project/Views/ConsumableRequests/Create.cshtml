@model HealthOps_Project.Models.ConsumableRequest
<partial name="_BackButton" />
@{
    ViewData["Title"] = "Create Consumable Request";
}

<h1><i class="fas fa-plus-circle"></i> Create Consumable Request</h1>

<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="ConsumableId" class="control-label">Consumable</label>
                <select asp-for="ConsumableId" class="form-control" asp-items="ViewBag.ConsumableId" required>
                    <option value="">-- Select Consumable --</option>
                </select>
                <span asp-validation-for="ConsumableId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="WardName" class="control-label">Ward Name</label>
                <input asp-for="WardName" class="form-control" required />
                <span asp-validation-for="WardName" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="QuantityRequested" class="control-label">Quantity Requested</label>
                <input asp-for="QuantityRequested" class="form-control" min="1" required />
                <span asp-validation-for="QuantityRequested" class="text-danger"></span>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-success"><i class="fas fa-paper-plane"></i> Submit Request</button>
                <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}