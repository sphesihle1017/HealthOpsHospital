@model HealthOps_Project.Models.ConsumableRequest
<partial name="_BackButton" />
@{
    ViewData["Title"] = "Request Details";
}

<h1><i class="fas fa-info-circle"></i> Request Details</h1>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Request ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Consumable</dt>
            <dd class="col-sm-9">@Model.Consumable?.Name</dd>

            <dt class="col-sm-3">Ward Name</dt>
            <dd class="col-sm-9">@Model.WardName</dd>

            <dt class="col-sm-3">Quantity Requested</dt>
            <dd class="col-sm-9">@Model.QuantityRequested</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                <span class="badge @GetStatusBadgeClass(Model.Status)">@Model.Status</span>
            </dd>

            <dt class="col-sm-3">Requested At</dt>
            <dd class="col-sm-9">@Model.RequestedAt.ToString("MMM dd, yyyy HH:mm")</dd>

            @if (Model.ReceivedAt.HasValue)
            {
                <dt class="col-sm-3">Received At</dt>
                <dd class="col-sm-9">@Model.ReceivedAt.Value.ToString("MMM dd, yyyy HH:mm")</dd>
            }
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning"><i class="fas fa-edit"></i> Edit</a>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
</div>

@functions {
    public string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Pending" => "bg-warning",
            "Approved" => "bg-info",
            "Received" => "bg-success",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}