@model HealthOps_Project.Models.ConsumableRequest

@{
    ViewData["Title"] = "Delete Request";
}

<h1><i class="fas fa-trash"></i> Delete Request</h1>

<h3>Are you sure you want to delete this request?</h3>
<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Request ID</dt>
            <dd class="col-sm-9">@Model.Id</dd>

            <dt class="col-sm-3">Consumable</dt>
            <dd class="col-sm-9">@Model.Consumable?.Name</dd>

            <dt class="col-sm-3">Ward Name</dt>
            <dd class="col-sm-9">@Model.WardName</dd>

            <dt class="col-sm-3">Quantity Requested</dt>
            <dd class="col-sm-9">@Model.QuantityRequested</dd>

            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">@Model.Status</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
    <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
</form>