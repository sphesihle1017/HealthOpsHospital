@model HealthOps_Project.Models.Treatment

@{
    ViewData["Title"] = "Delete Treatment";
}

<h2>Delete Treatment</h2>

<div class="alert alert-danger">
    Are you sure you want to delete this treatment?
</div>

<div class="mb-3">
    <strong>Patient:</strong>
    @{
        var p = Model.Patient;
        string patientName = p != null ? $"{p.FirstName ?? ""} {p.LastName ?? ""}".Trim() : "Unknown Patient";
    }
    <span>@patientName</span>
</div>

<div class="mb-3"><strong>Date:</strong> @Model.TreatmentDate.ToString("g")</div>
<div class="mb-3"><strong>Type:</strong> @Model.TreatmentType</div>
<div class="mb-3"><strong>Details:</strong> @Model.Details</div>
<div class="mb-3"><strong>Performed By:</strong> @Model.PerformedBy</div>
<div class="mb-3"><strong>Notes:</strong> @(string.IsNullOrEmpty(Model.Notes) ? "None" : Model.Notes)</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="TreatmentId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
