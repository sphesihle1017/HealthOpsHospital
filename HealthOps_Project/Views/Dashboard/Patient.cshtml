@{
    Layout = "_DashboardLayout";
}

<h2>Welcome, @User.Identity.Name (Patient)</h2>
<p>Book appointments, view your medical history, and check visitations:</p>

<style>
    .dashboard-btn {
        padding: 50px 20px;
        font-size: 1.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        display: block;
    }

        .dashboard-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
            text-decoration: none;
        }
</style>

<div class="row mt-4">
    <div class="col-md-4 mb-3">
        <a class="btn btn-primary w-100" href="@Url.Action("Book", "Appointments")">Book Appointment</a>
    </div>
    <div class="col-md-4 mb-3">
        <a class="btn btn-success w-100" href="@Url.Action("Index", "PatientHistory")">Medical History</a>
    </div>
    <div class="col-md-4 mb-3">
        <a class="btn btn-info w-100" href="@Url.Action("Index", "Visitations")">Visitations</a>
    </div>
</div>
 