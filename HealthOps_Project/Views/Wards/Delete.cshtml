@model HealthOps_Project.Models.Ward

@{
    ViewData["Title"] = "Delete Ward";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger fw-bold text-center">🗑 Delete Ward</h2>

    <div class="alert alert-warning shadow-sm rounded-4 p-4 text-center">
        ⚠️ Are you sure you want to delete the ward
        <strong class="text-danger">@Model.Name</strong>?
    </div>

    <form asp-action="Delete" method="post" class="text-center">
        <input type="hidden" asp-for="WardId" />
        <button type="submit" class="btn btn-danger px-4 rounded-pill fw-bold shadow-sm">
            🗑 Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-outline-secondary ms-2 px-4 rounded-pill fw-semibold shadow-sm">
            ⬅ Cancel
        </a>
    </form>
</div>
