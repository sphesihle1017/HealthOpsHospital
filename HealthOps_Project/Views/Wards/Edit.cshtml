@model HealthOps_Project.Models.Ward

@{
    ViewData["Title"] = "Edit Ward";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary fw-bold text-center">✏ Edit Ward</h2>

    <div class="card shadow-lg rounded-4 p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="WardId" />

            <div class="mb-3">
                <label asp-for="Name" class="form-label fw-semibold"></label>
                <input asp-for="Name" class="form-control rounded-pill shadow-sm" />
            </div>

            <div class="mb-3">
                <label asp-for="Location" class="form-label fw-semibold"></label>
                <input asp-for="Location" class="form-control rounded-pill shadow-sm" />
            </div>

            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label fw-semibold"></label>
            </div>

            <div class="d-flex justify-content-between">
                <button type="submit" class="btn btn-primary px-4 rounded-pill fw-bold shadow-sm">
                    💾 Update
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary px-4 rounded-pill fw-semibold shadow-sm">
                    ⬅ Back to Wards
                </a>
            </div>
        </form>
    </div>
</div>
