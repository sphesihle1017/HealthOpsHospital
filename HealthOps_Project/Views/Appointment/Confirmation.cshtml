@model HealthOps_Project.Models.Appointment
@{
    ViewData["Title"] = "Appointment Confirmation";
    var ImageUrl = Url.Content("~/images/Health-bg.jpg");
    var emailStatus = TempData["EmailStatus"] as string;
}

<div style="background: url('@ImageUrl') center/cover no-repeat; min-height:100vh; display:flex; justify-content:center; align-items:center; padding:2rem;">
    <div class="card shadow-lg rounded-4 p-4 text-center" style="width:100%; max-width:600px; background-color: rgba(255,255,255,0.95);">
        <h2 class="text-success mb-3">✅ Appointment Confirmed</h2>

        <p class="mb-1"><strong>Patient:</strong> @Model.PatientName</p>
        <p class="mb-1"><strong>Date:</strong> @Model.AppointmentDate.ToString(@"M")</p>
        <p class="mb-1"><strong>Time:</strong> @Model.AppointmentTime.ToString(@"hh\:mm")</p>
        <p class="mb-1"><strong>Doctor:</strong> @Model.Doctor?.FullName</p>
        @if (!string.IsNullOrEmpty(Model.Notes))
        {
            <p class="mb-1"><strong>Notes:</strong> @Model.Notes</p>
        }

        @if (!string.IsNullOrEmpty(emailStatus))
        {
            <div class="alert alert-info mt-3" role="alert">
                @emailStatus
            </div>
        }

        <div class="d-flex flex-column flex-md-row justify-content-center gap-3 mt-4">
            <a class="btn btn-primary w-100 w-md-auto" href="@Url.Action("Create", "Appointment")">Book Another</a>
            <a class="btn btn-secondary w-100 w-md-auto" href="@Url.Action("Index", "Home")">Back to Home</a>
        </div>
    </div>
</div>

