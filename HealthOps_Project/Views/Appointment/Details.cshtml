@model Appointment //ADDED BY SHEZI

@{
    ViewData["Title"] = "Appointment Details";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Appointment Details</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .navbar {
            display: none;
        }

        body {
            background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%);
            min-height: 100vh;
            padding: 30px 0;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .container {
            max-width: 900px;
            background: white;
            border-radius: 15px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.08);
            padding: 30px;
            margin-top: 20px;
        }

        h1 {
            color: #2c6fbb;
            font-weight: 600;
            margin-bottom: 25px;
            padding-bottom: 15px;
            border-bottom: 2px solid #eaeaea;
            text-align: center;
        }


        .btn-warning {
            background: linear-gradient(120deg, #ffc107 0%, #ff9800 100%);
            border: none;
            padding: 10px 25px;
            font-weight: 600;
            border-radius: 8px;
            color: #212529;
            box-shadow: 0 4px 8px rgba(255, 193, 7, 0.3);
        }

        .btn-secondary {
            background: linear-gradient(120deg, #6c757d 0%, #5a6268 100%);
            border: none;
            padding: 10px 25px;
            font-weight: 600;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(108, 117, 125, 0.3);
        }

        .btn-warning:hover {
            background: linear-gradient(120deg, #e0a800 0%, #e68900 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(255, 193, 7, 0.4);
            color: #212529;
        }

        .btn-secondary:hover {
            background: linear-gradient(120deg, #5a6268 0%, #4a5056 100%);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(108, 117, 125, 0.4);
        }

        .appointment-id {
            color: #2c6fbb;
            font-weight: 700;
            font-size: 1.2rem;
        }

        .notes-container {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-top: 5px;
            border-left: 3px solid #2c6fbb;
        }

    

    </style>
</head>
<body>
    <div class="container">
        <h1><i class="fas fa-calendar-check me-2"></i>Appointment Details</h1>

        <div>
            <hr />
            <dl class="row">
                <dt class="col-sm-3"><i class="fas fa-id-card detail-icon"></i>Appointment ID</dt>
                <dd class="col-sm-9 appointment-id">@Model.AppointmentId</dd>

                <dt class="col-sm-3"><i class="fas fa-user detail-icon"></i>Patient Name</dt>
                <dd class="col-sm-9">@Model.PatientName</dd>

                <dt class="col-sm-3"><i class="fas fa-id-badge detail-icon"></i>Patient ID Number</dt>
                <dd class="col-sm-9">@Model.PatientIdNumber</dd>

                <dt class="col-sm-3"><i class="fas fa-calendar-day detail-icon"></i>Appointment Date</dt>
                <dd class="col-sm-9">@Model.AppointmentDate.ToString("yyyy-MM-dd")</dd>

                <dt class="col-sm-3"><i class="fas fa-clock detail-icon"></i>Appointment Time</dt>
                <dd class="col-sm-9">@Model.AppointmentTime.ToString("hh\\:mm")</dd>

                <dt class="col-sm-3"><i class="fas fa-sticky-note detail-icon"></i>Notes</dt>
                <dd class="col-sm-9">
                    <div class="notes-container">
                        @Model.Notes
                    </div>
                </dd>
            </dl>
        </div>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.AppointmentId" class="btn btn-warning"><i class="fas fa-edit me-2"></i>Edit</a>
            <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left me-2"></i>Back to List</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>