@model HealthOps_Project.Models.Discharge

@{
    ViewData["Title"] = "Edit Discharge";
}

<div class="container-fluid p-0">
    <div class="beds-title-bar py-3 text-center text-white fw-bold">
        ✏ Edit Discharge
    </div>
</div>

<div class="container mt-4">
    <div class="card shadow-sm rounded-4 p-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="DischargeDate" class="form-label fw-bold"></label>
                <input asp-for="DischargeDate" class="form-control" type="date" />
                <span asp-validation-for="DischargeDate" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Reason" class="form-label fw-bold"></label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PatientId" class="form-label fw-bold">Patient</label>
                <select asp-for="PatientId" asp-items="ViewBag.PatientList" class="form-control rounded-pill shadow-sm"></select>
                <span asp-validation-for="PatientId" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="WardId" class="form-label fw-bold">Ward</label>
                <select asp-for="WardId" asp-items="ViewBag.WardList" class="form-control rounded-pill shadow-sm">
                    <option value="">-- Select Ward --</option>
                </select>
                <span asp-validation-for="WardId" class="text-danger"></span>
            </div>


            <div class="mb-3 form-check">
                <input asp-for="IsActive" class="form-check-input" />
                <label asp-for="IsActive" class="form-check-label fw-bold">Active</label>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-success rounded-pill px-4 fw-bold shadow-sm">💾 Save</button>
                <a asp-action="Index" class="btn btn-outline-secondary rounded-pill fw-bold shadow-sm">⬅ Cancel</a>
            </div>

        </form>
    </div>
</div>

@await Html.PartialAsync("_DischargeStyle")
