@model HealthOps_Project.Models.Discharge



@{
    ViewData["Title"] = "Discharge Details";
}

<div class="container-fluid p-0">
    <div class="beds-title-bar py-3 text-center text-white fw-bold">
        📋 Discharge Details
    </div>
</div>

<div class="container mt-4 discharge-details-container">
    <div class="card shadow-sm rounded-4 p-4">
        <h4 class="fw-bold text-success mb-3">Discharge Information</h4>

        <dl class="row">
            <dt class="col-sm-3">Discharge Date</dt>
            <dd class="col-sm-9">@Model.DischargeDate.ToString("yyyy-MM-dd")</dd>

            <dt class="col-sm-3">Reason</dt>
            <dd class="col-sm-9">@Model.Reason</dd>

            <dt class="col-sm-3">Patient</dt>
            <dd class="col-sm-9">@Model.Patient?.FirstName</dd>

            <dt class="col-sm-3">Ward</dt>
            <dd class="col-sm-9">@Model.Ward?.Name</dd>

            <dt class="col-sm-3">Active</dt>
            <dd class="col-sm-9">@(Model.IsActive ? "✅ Yes" : "❌ No")</dd>
        </dl>

        <div class="mt-3 d-flex gap-2 action-buttons">
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning rounded-pill fw-bold shadow-sm">✏ Edit</a>
            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill fw-bold shadow-sm">⬅ Back</a>
            <button class="btn btn-success rounded-pill fw-bold shadow-sm" onclick="window.print();">
                🖨 Print
            </button>
        </div>
    </div>
</div>


    <style>
        /* Hide buttons, navigation, and card shadow when printing */
        @@media print {
            body * {
                visibility: hidden; /* hide everything by default */
            }
            .discharge-details-container,
            .discharge-details-container * {
                visibility: visible; /* show only discharge details */
            }
            .discharge-details-container {
                position: absolute;
                left: 0;
                top: 0;
                width: 100%;
                padding: 0;
                margin: 0;
            }
            .action-buttons {
                display: none; /* hide buttons when printing */
            }
            .card {
                box-shadow: none; /* remove shadow for printing */
            }
        }
    </style>


@await Html.PartialAsync("_DischargeStyle")
