@model HealthOps_Project.Models.ProfileViewModel
@{
    ViewData["Title"] = "My Profile";
}

<style>
    body {
        background: linear-gradient(135deg, #c9e9ff, #f7f7f7);
        font-family: 'Poppins', sans-serif;
    }

    .profile-card {
        backdrop-filter: blur(15px);
        background: rgba(255, 255, 255, 0.8);
        border-radius: 20px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
        max-width: 600px;
        margin: auto;
    }

        .profile-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.15);
        }

    .profile-header {
        border-bottom: 3px solid #0078ff;
        padding-bottom: 10px;
        margin-bottom: 25px;
        text-align: center;
    }

        .profile-header h2 {
            font-weight: 700;
            color: #0078ff;
            letter-spacing: 1px;
        }

    .profile-info {
        font-size: 1.05rem;
        color: #333;
        margin-bottom: 20px;
    }

        .profile-info strong {
            color: #0078ff;
        }

    .profile-list {
        list-style: none;
        padding-left: 0;
    }

        .profile-list li {
            background: #f0f8ff;
            padding: 8px 12px;
            border-radius: 10px;
            margin-bottom: 6px;
            color: #333;
            transition: 0.2s;
        }

            .profile-list li:hover {
                background: #0078ff;
                color: #fff;
                transform: translateX(5px);
            }

    .btn-glow {
        border-radius: 25px;
        padding: 10px 25px;
        font-weight: 500;
        transition: all 0.3s ease;
        box-shadow: 0 0 0 rgba(0, 120, 255, 0);
    }

        .btn-glow:hover {
            box-shadow: 0 0 10px rgba(0, 120, 255, 0.6);
            transform: translateY(-2px);
        }

    .icon {
        color: #0078ff;
        margin-right: 8px;
    }

    .logout-btn {
        background-color: #ff4d4d;
        color: white;
    }

        .logout-btn:hover {
            background-color: #ff2a2a;
            box-shadow: 0 0 10px rgba(255, 0, 0, 0.5);
        }

    .role-badge {
        display: inline-block;
        background: linear-gradient(90deg, #0078ff, #00c6ff);
        color: white;
        border-radius: 20px;
        padding: 6px 14px;
        font-size: 0.9rem;
        margin: 4px;
        box-shadow: 0 3px 6px rgba(0, 0, 0, 0.1);
    }

    .avatar {
        width: 100px;
        height: 100px;
        border-radius: 50%;
        object-fit: cover;
        box-shadow: 0 0 10px rgba(0, 120, 255, 0.3);
        margin-bottom: 10px;
    }
</style>

<div class="container mt-5">
    <div class="card profile-card shadow-lg p-4 text-center">
        <div class="profile-header">
            <img src="https://cdn-icons-png.flaticon.com/512/847/847969.png" alt="Profile Picture" class="avatar" />
            <h2><i class="bi bi-person-circle icon"></i>@Model.FirstName @Model.LastName</h2>
            <p class="text-muted">@Model.Email</p>
        </div>

        <div class="profile-info text-start">
            <p><i class="bi bi-person icon"></i><strong>First Name:</strong> @Model.FirstName</p>
            <p><i class="bi bi-person-badge icon"></i><strong>Last Name:</strong> @Model.LastName</p>
            <p><i class="bi bi-envelope icon"></i><strong>Email:</strong> @Model.Email</p>
        </div>

        <div class="profile-info text-start">
            <strong><i class="bi bi-award icon"></i>Roles:</strong>
            <div>
                @foreach (var role in Model.Roles)
                {
                    <span class="role-badge">@role</span>
                }
            </div>
        </div>

        <div class="text-center mt-4">
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-primary btn-glow me-2">
                <i class="bi bi-speedometer2"></i> Dashboard
            </a>

            <a asp-action="EditProfile" class="btn btn-success btn-glow me-2">
                <i class="bi bi-pencil-square"></i> Edit Profile
            </a>

            <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                <button type="submit" class="btn logout-btn btn-glow">
                    <i class="bi bi-box-arrow-right"></i> Logout
                </button>
            </form>
        </div>
    </div>
</div>

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
