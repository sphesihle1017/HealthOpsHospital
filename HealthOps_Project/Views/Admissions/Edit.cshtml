@model HealthOps_Project.Models.Admission

@{
    ViewData["Title"] = "Edit Admission";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 fw-bold text-warning">✏️ Edit Admission</h2>

    <form asp-action="Edit" method="post" class="shadow-lg p-4 rounded bg-light">
        <input type="hidden" asp-for="Id" />

        <div class="row mb-3">
            <div class="col-md-4">
                <label asp-for="PatientId" class="form-label fw-bold">Patient</label>
                <select class="form-select bg-light text-muted" disabled>
                    <option selected>@ViewBag.PatientName</option>
                </select>
                <input type="hidden" asp-for="PatientId" />
            </div>


            <div class="col-md-4">
                <label asp-for="WardId" class="form-label fw-bold">Ward</label>
                <select asp-for="WardId" class="form-select" asp-items="ViewBag.WardId"></select>
            </div>

            <div class="col-md-4">
                <label asp-for="BedId" class="form-label fw-bold">Bed</label>
                <select asp-for="BedId" class="form-select" asp-items="ViewBag.BedId"></select>
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="AdmissionDate" class="form-label fw-bold">Admission Date</label>
            <input asp-for="AdmissionDate" type="date" class="form-control bg-light text-muted" readonly style="cursor: not-allowed;" />
        </div>

        <div class="mb-3">
            <label asp-for="DischargeDate" class="form-label fw-bold">Discharge Date</label>
            <input asp-for="DischargeDate" type="date" class="form-control" />
        </div>

        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary rounded-pill px-4 me-2">
                💾 Save Changes
            </button>
            <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">
                ⬅️ Back to List
            </a>
        </div>
    </form>
</div>
