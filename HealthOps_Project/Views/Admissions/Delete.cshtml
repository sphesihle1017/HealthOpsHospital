@model HealthOps_Project.Models.Admission

@{
    ViewData["Title"] = "Delete Admission";
}

<div class="container mt-4">
    <h2 class="text-center mb-4 text-danger fw-bold">⚠️ Confirm Delete</h2>

    <div class="card shadow-lg p-4 bg-light">
        <h5>Are you sure you want to delete this admission?</h5>
        <hr />

        <dl class="row">
            <dt class="col-sm-3">Patient</dt>
            <dd class="col-sm-9">@Model.Patient?.FirstName</dd>

            <dt class="col-sm-3">Ward</dt>
            <dd class="col-sm-9">@Model.Ward?.Name</dd>

            <dt class="col-sm-3">Bed</dt>
            <dd class="col-sm-9">@Model.Bed?.BedNumber</dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <div class="text-center">
                <button type="submit" class="btn btn-danger rounded-pill px-4 me-2">🗑️ Delete</button>
                <a asp-action="Index" class="btn btn-secondary rounded-pill px-4">⬅️ Cancel</a>
            </div>
        </form>
    </div>
</div>
