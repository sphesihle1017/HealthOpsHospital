@model HealthOps_Project.Models.Room

<h2 class="mb-4">?? Room Details</h2>

<div class="card shadow-lg p-3">
    <dl class="row">
        <dt class="col-sm-3">Room Number</dt>
        <dd class="col-sm-9">@Model.RoomNumber</dd>

        <dt class="col-sm-3">Capacity</dt>
        <dd class="col-sm-9">@Model.Capacity</dd>

        <dt class="col-sm-3">Available</dt>
        <dd class="col-sm-9">@(Model.IsAvailable ? "Yes" : "No")</dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Edit" asp-route-id="@Model.RoomId" class="btn btn-warning">
            <i class="bi bi-pencil-square"></i> Edit
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>
</div>
