@model HealthOps_Project.Models.Room

@{
    ViewData["Title"] = "Delete Unavailable Room";
}

<h2 class="mb-4 text-center text-danger">🗑️ Delete Unavailable Room</h2>

<div class="card shadow p-4 border-danger">
    <h4 class="text-danger">Are you sure you want to remove this unavailable room from the list?</h4>

    <dl class="row mt-3">
        <dt class="col-sm-3">Room Number</dt>
        <dd class="col-sm-9">@Model.RoomNumber</dd>

        <dt class="col-sm-3">Capacity</dt>
        <dd class="col-sm-9">@Model.Capacity</dd>

        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">
            <span class="badge bg-danger">Unavailable</span>
        </dd>
    </dl>

    <form asp-action="DeleteUnavailable">
        <input type="hidden" asp-for="RoomId" />
        <div class="d-flex justify-content-between mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Cancel
            </a>
            <button type="submit" class="btn btn-danger">
                🗑️ Confirm Delete
            </button>
        </div>
    </form>
</div>
