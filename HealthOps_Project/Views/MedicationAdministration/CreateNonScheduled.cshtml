@model HealthOps_Project.Models.NonScheduledMedication
@{
    ViewData["Title"] = "Add Non-Scheduled Medication";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-4">
    <h2>Add Non-Scheduled Medication</h2>

    <form asp-action="CreateNonScheduled" method="post" class="mt-3">
        <div class="mb-3">
            <label class="form-label">Medication</label>
            <select asp-for="MedicationId" class="form-select" asp-items="@(new SelectList((IEnumerable<HealthOps_Project.Models.Medication>)ViewData["Medications"], "MedicationId", "Name"))">
                <option value="">-- Select Medication --</option>
            </select>
            <span asp-validation-for="MedicationId" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Dosage" class="form-label"></label>
            <input asp-for="Dosage" class="form-control" />
            <span asp-validation-for="Dosage" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AdministeredBy" class="form-label"></label>
            <input asp-for="AdministeredBy" class="form-control" />
            <span asp-validation-for="AdministeredBy" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="AdministeredDate" class="form-label"></label>
            <input asp-for="AdministeredDate" class="form-control" type="date" readonly />
            <span asp-validation-for="AdministeredDate" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Save</button>
        <a href="@Url.Action("NonScheduled")" class="btn btn-secondary">Cancel</a>
    </form>
</div>
