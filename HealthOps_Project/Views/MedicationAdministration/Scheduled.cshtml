@model IEnumerable<HealthOps_Project.Models.ScheduledMedication>
@{
    ViewData["Title"] = "Scheduled Medications";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="container mt-4">
    <h2 class="mb-4">Scheduled Medications</h2>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }

    <div class="mb-3">
        <a href="@Url.Action("CreateScheduled", "MedicationAdministration")" class="btn btn-primary">Add Scheduled Medication</a>
        <a href="/Dashboard/Nurse" class="btn btn-secondary ms-2">Back to Dashboard</a>
    </div>

    <table class="table table-striped table-bordered align-middle">
        <thead class="table-dark">
            <tr>
                <th>Medication</th>
                <th>Dosage</th>
                <th>Administered Date</th>
                <th>Administered By</th>
                <th>Status</th>
                <th style="width:180px;">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var med in Model)
            {
                <tr>
                    <td>@med.Medication?.Name</td>
                    <td>@med.Dosage</td>
                    <td>@med.AdministeredDate.ToShortDateString()</td>
                    <td>@med.AdministeredBy</td>
                    <td>@med.ScheduledMedicationStatus</td>
                    <td>
                        <a href="@Url.Action("ScheduledDetails", new { id = med.Id })" class="btn btn-info btn-sm">Details</a>
                        <a href="@Url.Action("EditScheduled", new { id = med.Id })" class="btn btn-warning btn-sm">Edit</a>
                        <a href="@Url.Action("DeleteScheduled", new { id = med.Id })" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
