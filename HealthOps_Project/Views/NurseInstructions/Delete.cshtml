@model HealthOps_Project.Models.NurseInstruction

@{
    ViewData["Title"] = "Delete Instruction";
}

<h1>Delete Instruction</h1>

<h3>Are you sure you want to delete this instruction?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Patient</dt>
        <dd class="col-sm-10">@(Model.Patient?.LastName ?? "Unknown Patient")</dd>

        <dt class="col-sm-2">Instruction</dt>
        <dd class="col-sm-10">@Model.Instruction</dd>

        <dt class="col-sm-2">Issued At</dt>
        <dd class="col-sm-10">@Model.IssuedAt.ToString("g")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
<style>
    /* Hide navbar */
    .navbar {
        display: none;
    }

    /* General page styling */
    body {
        background-color: #fef5f5;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #2c3e50;
        line-height: 1.6;
        padding: 20px;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
    }

    /* Content container */
    div {
        max-width: 800px;
        width: 100%;
        margin: 0 auto;
        background: white;
        padding: 35px;
        border-radius: 12px;
        box-shadow: 0 8px 25px rgba(0, 0, 0, 0.1);
        border: 1px solid #fed7d7;
    }

    /* Header styling */
    h1 {
        color: #e53e3e;
        text-align: center;
        margin-bottom: 15px;
        font-weight: 700;
        font-size: 2.2rem;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.1);
        position: relative;
        padding-bottom: 15px;
    }

        h1::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 80px;
            height: 4px;
            background: linear-gradient(to right, #e53e3e, #feb2b2);
            border-radius: 2px;
        }

    h3 {
        color: #4a5568;
        text-align: center;
        margin-bottom: 30px;
        font-weight: 500;
        font-size: 1.4rem;
        line-height: 1.4;
    }

    /* Warning icon */
    h1::before {
        content: "⚠️";
        margin-right: 15px;
        font-size: 2rem;
    }

    /* Definition list styling */
    .row {
        display: flex;
        margin-bottom: 18px;
        padding: 16px 20px;
        border-radius: 8px;
        transition: background-color 0.3s ease;
    }

        .row:hover {
            background-color: #fff5f5;
        }

    dt {
        font-weight: 600;
        color: #2d3748;
        flex: 0 0 25%;
        padding-right: 15px;
        text-align: right;
        font-size: 16px;
    }

    dd {
        flex: 0 0 75%;
        margin: 0;
        color: #4a5568;
        font-weight: 500;
        font-size: 16px;
        word-break: break-word;
    }

    /* Form styling */
    form {
        display: flex;
        justify-content: center;
        gap: 20px;
        margin-top: 35px;
        padding-top: 25px;
        border-top: 1px solid #e2e8f0;
    }

    /* Button styling */
    input[type="submit"], .btn {
        padding: 14px 32px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        min-width: 140px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
    }

    input[type="submit"] {
        background: linear-gradient(to right, #e53e3e, #c53030);
        color: white;
        box-shadow: 0 4px 6px rgba(229, 62, 62, 0.3);
    }

        input[type="submit"]:hover {
            background: linear-gradient(to right, #c53030, #9b2c2c);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(229, 62, 62, 0.4);
        }

    .btn-secondary {
        background: linear-gradient(to right, #a0aec0, #718096);
        color: white;
        box-shadow: 0 4px 6px rgba(113, 128, 150, 0.3);
        line-height: 1.5;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .btn-secondary:hover {
            background: linear-gradient(to right, #718096, #4a5568);
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(113, 128, 150, 0.4);
        }

    /* Focus states for accessibility */
    input[type="submit"]:focus,
    .btn:focus {
        outline: 2px solid #2b6cb0;
        outline-offset: 2px;
    }

   
     div
    {
        padding: 25px 20px;
    }

    .row {
        flex-direction: column;
    }

    dt {
        text-align: left;
        flex: 0 0 100%;
