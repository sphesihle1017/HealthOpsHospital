    }

    dd {
        flex: 0 0 100%;
        padding-left: 15px;
    }

    form {
        flex-direction: column;
        align-items: center;
        gap: 15px;
    }

    input[type="submit"],
    .btn {
        width: 100%;
        max-width: 280px;
    }

    h1 {
        font-size: 1.9rem;
    }

    h3 {
        font-size: 1.2rem;
    }



    div {
        animation: gentlePulse 3s ease-in-out infinite;
    }

    /* Highlight for important information */
    dd:last-child {
        color: #2c5282;
        font-weight: 600;
    }
</style>