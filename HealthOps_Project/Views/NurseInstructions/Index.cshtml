@model IEnumerable<HealthOps_Project.Models.NurseInstruction>

@{
    ViewData["Title"] = "Nurse Instructions";
}

    <div class="header">

        <div class="row align-items-center">
            <h2>Nurse Instructions</h2>

            <a href="/Dashboard/Doctor" class="btn fa fa-arrow-left back-btn" id="back-to-dash">
                Back to Dashboard
            </a>

        </div>
    </div>


<p>
    <a asp-action="Create" class="btn btn-primary">Create New Instruction</a>
  

@* 
    <a asp-controller="DoctorInstruction" asp-action="Detail" class="btn btn-primary" id="docInstr">View Doc Instruction</a>    <<<Kamva add navigation to your doctor instructions so the dr can view instructions
       *@
</p>

<table class="table table-striped">
    <thead>
        <tr>

            <th>Patient ID Number</th>
            <th>Patient</th>
            <th>Nurse </th>
            <th>Instruction</th>
            <th>Issued At</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Patient?.SouthAfricanID</td>
                <td>@(item.Patient?.LastName ?? "Unknown Patient") @(item.Patient?.FirstName ?? "Unknown Patient")</td>
                <td>@item.NurseName</td>
                <td>@item.Instruction</td>
                <td>@item.IssuedAt.ToString("g")</td>
                <td>
                    @if (item.IsCompleted)
                    {
                        <span class="badge bg-success">Completed</span>
                    }
                    else
                    {
                        <span class="badge bg-warning">Pending</span>
                    }
                </td>
                <td>
                   
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
