@model HealthOps_Project.Models.NurseInstruction

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PatientId" class="control-label"></label>
        <select asp-for="PatientId" asp-items="ViewBag.PatientList" class="form-control">
            <option value="">-- Select Patient --</option>
        </select>
        <span asp-validation-for="PatientId" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="NurseName" class="form-label">Nurse</label>
        <input asp-for="NurseName" class="form-control" placeholder="Enter Nurse's' name" />
        <span asp-validation-for="NurseName" class="text-danger"></span>
    </div>


    <div class="form-group">
        <label asp-for="Instruction" class="control-label"></label>
        <input asp-for="Instruction" class="form-control" />
        <span asp-validation-for="Instruction" class="text-danger"></span>
    </div>

    <div class="form-group form-check">
        <input asp-for="IsCompleted" class="form-check-input" />
        <label asp-for="IsCompleted" class="form-check-label"></label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
</form>


