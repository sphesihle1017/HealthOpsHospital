@model HealthOps_Project.Models.Consumable

@{
    ViewData["Title"] = "Delete Consumable";
}

<h1><i class="fas fa-trash"></i> Delete Consumable</h1>

<h3>Are you sure you want to delete this consumable?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Description)</dd>

        <dt class="col-sm-2">Unit</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Unit)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ConsumableId" />
        <button type="submit" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</button>
        <a asp-action="Index" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back to List</a>
    </form>
</div>