@model IEnumerable<HealthOps_Project.Models.Patient> //ADDED BY SHEZI TO MONITOR PATIENTS


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Patient Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        /* Hide navbar */
        .navbar {
            display: none;
        }

        /* General page styling */
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            padding: 20px 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 0 15px;
        }

        /* Header styling */
        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 20px 0;
            margin-bottom: 30px;
            border-radius: 10px;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
        }

        h1 {
            color: #2c3e50;
            font-weight: 700;
            margin-bottom: 30px;
            text-align: center;
            font-size: 2.5rem;
        }

        /* Button styling */
        .btn {
            border-radius: 8px;
            padding: 10px 20px;
            font-weight: 600;
            transition: all 0.3s ease;
            border: none;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary {
            background: linear-gradient(45deg, #4CAF50, #45a049);
            color: white;
            margin-bottom: 20px;
        }

            .btn-primary:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(76, 175, 80, 0.3);
            }

        .back-btn {
            background: rgba(255, 255, 255, 0.2);
            color: white;
            border: 2px solid rgba(255, 255, 255, 0.3);
            padding: 10px 20px;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

            .back-btn:hover {
                background: rgba(255, 255, 255, 0.3);
                transform: translateX(-5px);
                color: white;
            }

        /* Table styling */
        .table {
            background: white;
            border-radius: 10px;
            overflow: hidden;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            margin-top: 20px;
        }

            .table thead {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
                color: white;
            }

            .table th {
                padding: 15px;
                font-weight: 600;
                text-transform: uppercase;
                font-size: 0.9rem;
                letter-spacing: 0.5px;
            }

            .table td {
                padding: 15px;
                vertical-align: middle;
                border-bottom: 1px solid #eee;
            }

            .table tbody tr {
                transition: background-color 0.3s ease;
            }

                .table tbody tr:hover {
                    background-color: #f8f9fa;
                    transform: scale(1.01);
                    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
                }

        /* Badge styling */
        .badge {
            padding: 8px 16px;
            border-radius: 20px;
            font-weight: 600;
            font-size: 0.85rem;
        }

        .bg-success {
            background: linear-gradient(45deg, #4CAF50, #45a049);
        }

        .bg-warning {
            background: linear-gradient(45deg, #ff9800, #f57c00);
            color: white;
        }

        /* Action buttons */
        .btn-sm {
            padding: 6px 12px;
            font-size: 0.875rem;
            margin: 2px;
            border-radius: 6px;
        }

        .btn-info {
            background: linear-gradient(45deg, #17a2b8, #138496);
            color: white;
        }

        .btn-warning {
            background: linear-gradient(45deg, #ffc107, #e0a800);
            color: white;
        }

        .btn-danger {
            background: linear-gradient(45deg, #dc3545, #c82333);
            color: white;
        }

            .btn-info:hover,
            .btn-warning:hover,
            .btn-danger:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 8px rgba(0,0,0,0.2);
            }



        .header .col-md-6 {
            margin-bottom: 15px;
        }

        .table {
            font-size: 0.9rem;
        }

        .btn-sm {
            padding: 4px 8px;
            font-size: 0.8rem;
        }

        h1 {
            font-size: 2rem;
        }

        #back-to-dash {
            float: right;
        }



        .table tbody tr {
            animation: fadeIn 0.5s ease-out;
        }

            .table tbody tr:nth-child(even) {
                background-color: #fafafa;
            }
    </style>
</head>
<body>
    <div class="container">
        @if (Model != null && Model.Any())
        {
            <div class="header">
                <div class="row align-items-center">
                    <h2>Patient Management</h2>



                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary rounded-pill px-4 shadow-sm">
                        ⬅ Back to Dashboard
                    </a>

                </div>
            </div>
            <div>
                <a asp-controller="Patients" asp-action="Create" class="btn btn-secondary">Add Patient</a>
            </div>
            <div>
                <form asp-action="Search" method="get" class="search-form">
                    <input class="form-control me-2" type="text" name="query" placeholder="Search by patient ID" />
                    <button type="submit" class="btn btn-primary">Search</button>
                </form>
            </div>

            <div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>ID Number</th>
                            <th>Patient Full Names</th>
                            <th>Email</th>
                            <th>Age</th>
                            <th>Gender</th>
                            <th>Medical History</th>
                            <th>Allergies</th>
                            @*    <th>Bed</th> *@
                            <th>Actions</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var patient in Model)
                        {
                            <tr>
                                <td>@patient.SouthAfricanID</td>
                                <td>@patient.FirstName @patient.LastName</td>
                                <td>@patient.Email</td>
                                <td>@patient.Age</td>
                                <td>@patient.Gender</td>
                                <td>@patient.MedicalHistory</td>
                                <td>@patient.Allergies</td>
                                @*  <td>@patient.Bed?.BedNumber</td> *@
                                <td>
                                    <a class="btn btn-sm btn-info" href="/Patients/Details/@patient.PatientId">
                                        <i class="fas fa-eye"></i> Details
                                    </a>
                                    <a class="btn btn-sm btn-warning" href="/Patients/Edit/@patient.PatientId">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>

                                    <a class="btn btn-sm btn-danger" href="/Patients/Discharge/@patient.PatientId">
                                        <i class="fas fa-bin"></i> Discharge
                                    </a>
                                    <a class="btn btn-sm btn-info" href="/Patients/Bed/@patient.PatientId">
                                        <i class="fas fa-search"></i> Bed Locator
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        }
        else
        {
            <div>

                <a asp-controller="Patients" asp-action="Create" class="btn btn-primary">Add Patient</a>
                <a asp-controller="Dashboard" asp-action="Doctor" class="btn btn-secondary">Back</a>
            </div>
            <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> No patients found.
            </div>

        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>



























