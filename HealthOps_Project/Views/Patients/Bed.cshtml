@model IEnumerable<HealthOps_Project.Models.Bed>

@{
    ViewData["Title"] = "Bed Locator";
}

<div class="container mt-5 p-4"  >
    <div class="d-flex justify-content-between align-items-center mb-4" >
        <h2 class="text-white fw-bold">@ViewData["Title"]</h2>
        <a asp-action="PatientIndex" class="btn btn-outline-dark">
            <i class="bi bi-arrow-left"></i> Back
        </a>
    </div>

   
        <table class="table table-striped table-hover align-middle">
            <thead class="table-info">
                <tr>
                    <th scope="col">Bed Number</th>
                    <th scope="col">Patient</th>
                    <th scope="col">Room Name</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.BedNumber</td>
                        <td>@item.Patient?.LastName, @item.Patient?.FirstName</td>
                        <td>@item.Ward?.Location</td>
                       
                    </tr>
                }
            </tbody>
        </table>
   
</div>

<style>
    navbar{
        visibility:hidden;
    }
    h2 {
        letter-spacing: 1px;
    }

    .table-hover tbody tr:hover {
        background-color: #d6b3ff; /* light purple hover */
        transition: background-color 0.3s ease;
    }

    .btn-outline-light i {
        margin-right: 5px;
    }

    .table-responsive {
        background-color: #fff;
        padding: 20px;
        border-radius: 12px;
    }
</style>
