@model HealthOps_Project.Models.PrescriptionDelivery
<partial name="_BackButton" />
@{
    ViewData["Title"] = "Create Delivery";
}

<h1>Create Delivery</h1>

<h4>Prescription Delivery</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="PrescriptionId" class="control-label">Prescription</label>
                <select asp-for="PrescriptionId" class="form-control" asp-items="ViewBag.PrescriptionId">
                    <option value="">-- Select Prescription --</option>
                </select>
                <span asp-validation-for="PrescriptionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="Delivered">Delivered</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RequestedAt" class="control-label"></label>
                <input asp-for="RequestedAt" class="form-control" />
                <span asp-validation-for="RequestedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeliveredAt" class="control-label"></label>
                <input asp-for="DeliveredAt" class="form-control" />
                <span asp-validation-for="DeliveredAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Set default requested date to current date/time
            var now = new Date();
            var formatted = now.toISOString().slice(0, 16);
            $('#RequestedAt').val(formatted);
        });
    </script>
}