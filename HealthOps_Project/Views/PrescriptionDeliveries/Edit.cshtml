@model HealthOps_Project.Models.PrescriptionDelivery

@{
    ViewData["Title"] = "Edit Delivery";
}

<h1>Edit Delivery</h1>

<h4>Prescription Delivery</h4>
<hr />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="PrescriptionId" class="control-label">Prescription</label>
                <select asp-for="PrescriptionId" class="form-control" asp-items="ViewBag.PrescriptionId">
                    <option value="">-- Select Prescription --</option>
                </select>
                <span asp-validation-for="PrescriptionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Status" class="control-label"></label>
                <select asp-for="Status" class="form-control">
                    <option value="Pending">Pending</option>
                    <option value="Delivered">Delivered</option>
                    <option value="Cancelled">Cancelled</option>
                </select>
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RequestedAt" class="control-label"></label>
                <input asp-for="RequestedAt" class="form-control" />
                <span asp-validation-for="RequestedAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DeliveredAt" class="control-label"></label>
                <input asp-for="DeliveredAt" class="form-control" />
                <span asp-validation-for="DeliveredAt" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>

    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h5>Prescription Information</h5>
            </div>
            <div class="card-body">
                @if (Model.Prescription != null)
                {
                    <dl>
                        <dt>Patient:</dt>
                        <dd>@Model.Prescription.Patient?.FirstName</dd>

                        <dt>Medication:</dt>
                        <dd>@Model.Prescription.MedicationName</dd>

                        <dt>Dosage:</dt>
                        <dd>@Model.Prescription.Dosage</dd>

                        <dt>Frequency:</dt>
                        <dd>@Model.Prescription.Frequency</dd>

                        <dt>Instructions:</dt>
                        <dd>@Model.Prescription.Instructions</dd>
                    </dl>
                }
                else
                {
                    <p class="text-muted">No prescription information available.</p>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}